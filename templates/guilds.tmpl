{{template "_header.tmpl" .}}
        <div class="content-card">
                <div class="content-header">
                        <i class="fas fa-shield-alt"></i>
                        <div class="content-header-text">
                                <span>Guilds</span>
                        </div>
                </div>
                <div class="content-body">
                        {{if .Guilds}}
                                <table width="100%" class="guilds-table" style="border-spacing: 0; margin-top: 20px;">
                                        <tbody>
                                        {{range $idx, $guild := .Guilds}}
                                                <tr>
                                                        <td valign="top" style="width: 100%; padding: 15px; box-sizing: border-box; border-bottom: 1px solid #d4c0a1;">
                                                                <a href="/guild?id={{.GuildID}}" style="color: #c9a86a; text-decoration: none; font-size: 1.2em; font-weight: bold;">{{.Name}}</a><br>
                                                                <br>
                                                                {{if .Description}}
                                                                        {{.Description}}
                                                                {{else}}
                                                                        This guild has no description.
                                                                {{end}}
                                                        </td>
                                                </tr>
                                        {{end}}
                                        </tbody>
                                </table>
                        {{else}}
                                <p style="text-align: center; margin-top: 20px;">No guilds available.</p>
                        {{end}}
                        
                        {{if gt .Common.AccountID 0}}
                        <div style="margin-top: 30px;">
                                <a href="/guild/create" style="background: linear-gradient(180deg, #e6c98a 0%, #c9a86a 45%, #a8834f 100%); color: #1a1410; padding: 0.75rem 1.5rem; border: none; border-radius: 4px; cursor: pointer; font-weight: 600; font-family: 'Cinzel', serif; text-decoration: none; display: inline-block;">Found Guild</a>
                        </div>
                        {{end}}
                </div>
        </div>
{{template "_footer.tmpl" .}}
