{{template "_header.tmpl" .}}
        <div class="content-card">
                <div class="content-header">
                        <i class="fas fa-shield-alt"></i>
                        <div class="content-header-text">
                                <span>Guild Details</span>
                        </div>
                </div>
                <div class="content-body">
                        {{if .Guild}}
                                <h2 style="margin-bottom: 20px;">{{.Guild.Name}}</h2>
                                <p><strong>Leader:</strong> {{.Guild.Leader}}</p>
                                <p><strong>Members:</strong> {{.Guild.MemberCount}}</p>
                                <p><strong>Founded:</strong> {{.Guild.Created | FormatTimestamp}}</p>
                                <br>
                                {{if .Members}}
                                <h3 style="margin-top: 30px; margin-bottom: 15px; color: #c9a86a;">Guild Members</h3>
                                <table style="width: 100%;">
                                        <tr style="border-bottom: 2px solid #3d2817;">
                                                <th style="padding: 10px; text-align: left;">Name</th>
                                                <th style="padding: 10px; text-align: left;">Rank</th>
                                                <th style="padding: 10px; text-align: left;">Title</th>
                                                <th style="padding: 10px; text-align: left;">Level</th>
                                                <th style="padding: 10px; text-align: left;">Vocation</th>
                                        </tr>
                                        {{range .Members}}
                                                <tr style="border-bottom: 1px solid #3d2817;">
                                                        <td style="padding: 10px;">{{.CharacterName}}</td>
                                                        <td style="padding: 10px;">{{.Rank}}</td>
                                                        <td style="padding: 10px;">{{.Title}}</td>
                                                        <td style="padding: 10px;">{{.Level}}</td>
                                                        <td style="padding: 10px;">{{.Profession}}</td>
                                                </tr>
                                        {{end}}
                                </table>
                                {{end}}
                                <br>
                                <a href="/guilds" style="color: #c9a86a; text-decoration: none;">&lt; Back to Guilds</a>
                        {{else}}
                                <p>Guild not found.</p>
                                <a href="/guilds" style="color: #c9a86a; text-decoration: none;">&lt; Back to Guilds</a>
                        {{end}}
                </div>
        </div>
{{template "_footer.tmpl" .}}
