{{/* LAYOUT BASE - 3 COLUMNAS */}}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/res/css/style.css"/>

    <style>
        :root {
            --dark-bg: #1a1410;
            --darker-bg: #0f0a08;
            --accent-gold: #c9a86a;
            --border-color: #3d2817;
            --text-light: #e8d7c3;
            --text-muted: #a89780;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: var(--darker-bg);
            color: var(--text-light);
        }

        h1, h2, h3 {
            font-family: 'Cinzel', serif;
            margin: 0;
        }

        .header {
            background: linear-gradient(180deg, var(--darker-bg), var(--dark-bg));
            border-bottom: 3px solid var(--border-color);
            padding: 1.5rem 0;
        }

        .logo {
            font-family: 'Cinzel', serif;
            font-size: 2.5rem;
            font-weight: 700;
            text-decoration: none;
            background: linear-gradient(180deg, #e6c98a 0%, #c9a86a 45%, #a8834f 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .sidebar, .widget, .content-card {
            background: var(--dark-bg);
            border: 2px solid var(--border-color);
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,.5);
            margin-bottom: 1.25rem;
            overflow: hidden;
        }

        .sidebar-header {
            background: linear-gradient(180deg, #e6c98a 0%, #c9a86a 45%, #a8834f 100%);
            color: #1a1410;
            padding: 0.6rem 1rem;
            font-family: 'Cinzel', serif;
            font-weight: 600;
            font-size: 1.15rem;
            text-align: center;
            border-bottom: 2px solid var(--border-color);
        }

        .sidebar-menu {
            list-style: none;
            margin: 0;
            padding: 0.75rem 0;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.85rem 1.25rem;
            color: var(--text-light);
            text-decoration: none;
        }

        .sidebar-menu a i {
            font-size: 1.1rem;
            line-height: 1;
        }

        .sidebar-menu a:hover {
            background: rgba(212,175,55,.1);
            color: var(--accent-gold);
        }

        .content-header {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            background: linear-gradient(180deg, rgba(230,201,138,.28) 0%, rgba(201,168,106,.20) 45%, rgba(168,131,79,.22) 100%);
            border-bottom: 2px solid var(--border-color);
            padding: 0.6rem 1rem;
        }

        .content-header i {
            font-size: 1.1rem;
            color: var(--accent-gold);
        }

        .content-header-text {
            display: flex;
            flex-direction: column;
        }

        .content-header-text span:first-child {
            font-family: 'Cinzel', serif;
            font-weight: 600;
            font-size: 1.15rem;
            background: linear-gradient(180deg, #e6c98a 0%, #c9a86a 45%, #a8834f 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .content-header-date {
            font-size: 0.75rem;
            color: var(--text-muted);
            line-height: 1.1;
        }

        .content-body {
            padding: 1.25rem 1.5rem;
        }

        .status-item {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        .status-item:last-child {
            border-bottom: none;
        }

        .main-wrapper {
            max-width: 1500px;
            margin: auto;
        }

        /* Estilos heredados del CSS original */
        .box {
            background: var(--dark-bg);
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.25rem;
        }

        .box h1 {
            margin-bottom: 1rem;
            color: var(--accent-gold);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th {
            background: rgba(230,201,138,.15);
            color: var(--accent-gold);
            padding: 0.75rem;
            text-align: left;
            border-bottom: 2px solid var(--border-color);
        }

        table td {
            padding: 0.75rem;
            border-bottom: 1px solid var(--border-color);
        }

        table tr:hover {
            background: rgba(212,175,55,.05);
        }

        .info th {
            width: 40%;
        }

        form input[type="text"],
        form input[type="password"],
        form input[type="email"],
        form select {
            width: 100%;
            padding: 0.75rem;
            margin: 0.5rem 0 1rem 0;
            background: rgba(0,0,0,.3);
            border: 1px solid var(--border-color);
            color: var(--text-light);
            border-radius: 4px;
        }

        form label {
            display: block;
            color: var(--accent-gold);
            font-weight: 600;
            margin-top: 1rem;
        }

        form input[type="submit"],
        .button {
            background: linear-gradient(180deg, #e6c98a 0%, #c9a86a 45%, #a8834f 100%);
            color: #1a1410;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 4px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

        form input[type="submit"]:hover,
        .button:hover {
            opacity: 0.8;
        }

        a {
            color: var(--accent-gold);
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

<header class="header">
    <div class="container">
        <a href="/account" class="logo">Tibia Server</a>
    </div>
</header>

<div class="container-fluid my-4 px-4 main-wrapper">
    <div class="row">

        <!-- LEFT SIDEBAR - MENU -->
        <div class="col-lg-3">
            {{if .AccountID}}
            <div class="sidebar">
                <div class="sidebar-header">Cuenta</div>
                <ul class="sidebar-menu">
                    <li><a href="/account"><i class="fas fa-user"></i> Resumen de Cuenta</a></li>
                    <li><a href="/character/create"><i class="fas fa-plus-circle"></i> Crear Personaje</a></li>
                    <li><a href="/account/logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                </ul>
            </div>
            {{else}}
            <div class="sidebar">
                <div class="sidebar-header">Cuenta</div>
                <ul class="sidebar-menu">
                    <li><a href="/account"><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</a></li>
                    <li><a href="/account/create"><i class="fas fa-user-plus"></i> Crear Cuenta</a></li>
                    <li><a href="/account/recover"><i class="fas fa-key"></i> Recuperar Cuenta</a></li>
                </ul>
            </div>
            {{end}}

            <div class="sidebar">
                <div class="sidebar-header">Comunidad</div>
                <ul class="sidebar-menu">
                    <li><a href="/character"><i class="fas fa-search"></i> Buscar Personaje</a></li>
                    <li><a href="/world"><i class="fas fa-globe"></i> Mundos</a></li>
                </ul>
            </div>
        </div>

        <!-- CENTER CONTENT -->
        <div class="col-lg-6">
            {{.Content}}
        </div>

        <!-- RIGHT SIDEBAR - SERVER INFO -->
        <div class="col-lg-3">
            <div class="widget">
                <div class="sidebar-header">Estado del Servidor</div>
                <div class="status-item">
                    <span>Estado</span>
                    <span style="color: #1A1;">En Línea</span>
                </div>
                <div class="status-item">
                    <span>Jugadores</span>
                    <span>Cargando...</span>
                </div>
            </div>

            <div class="widget">
                <div class="sidebar-header">Información del Juego</div>
                <div class="status-item">
                    <span>Cliente</span>
                    <span>Tibia 7.7</span>
                </div>
                <div class="status-item">
                    <span>Servidor de Login</span>
                    <span>localhost:7171</span>
                </div>
            </div>
        </div>

    </div>
</div>

</body>
</html>
