{{template "_header.tmpl" .}}
        <div class="content-card">
                <div class="content-header">
                        <i class="fas fa-trophy"></i>
                        <div class="content-header-text">
                                <span>Highscores</span>
                        </div>
                </div>
                <div class="content-body">
                        <form method="GET" style="margin-bottom: 1.5rem; display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap;">
                                <div style="display: flex; gap: 0.5rem; align-items: center;">
                                        <label for="skill" style="margin: 0; white-space: nowrap;">Skill:</label>
                                        <select id="skill" name="skill" style="padding: 0.5rem; background: #333333; border: 1px solid #666; color: #FFF; border-radius: 4px; min-width: 180px;">
                                                <option value="">-- All Skills --</option>
                                                <option value="level" {{if eq .CurrentSkill "level"}}selected{{end}}>Level</option>
                                                <option value="magic" {{if eq .CurrentSkill "magic"}}selected{{end}}>Magic</option>
                                                <option value="fist" {{if eq .CurrentSkill "fist"}}selected{{end}}>Fist Fighting</option>
                                                <option value="club" {{if eq .CurrentSkill "club"}}selected{{end}}>Club Fighting</option>
                                                <option value="sword" {{if eq .CurrentSkill "sword"}}selected{{end}}>Sword Fighting</option>
                                                <option value="axe" {{if eq .CurrentSkill "axe"}}selected{{end}}>Axe Fighting</option>
                                                <option value="distance" {{if eq .CurrentSkill "distance"}}selected{{end}}>Distance Fighting</option>
                                                <option value="shielding" {{if eq .CurrentSkill "shielding"}}selected{{end}}>Shielding</option>
                                                <option value="fishing" {{if eq .CurrentSkill "fishing"}}selected{{end}}>Fishing</option>
                                        </select>
                                </div>
                                <div style="display: flex; gap: 0.5rem; align-items: center;">
                                        <label for="vocation" style="margin: 0; white-space: nowrap;">Vocation:</label>
                                        <select id="vocation" name="vocation" style="padding: 0.5rem; background: #333333; border: 1px solid #666; color: #FFF; border-radius: 4px; min-width: 180px;">
                                                <option value="">-- All Vocations --</option>
                                                <option value="sorcerer" {{if eq .CurrentVocation "sorcerer"}}selected{{end}}>Sorcerer</option>
                                                <option value="druid" {{if eq .CurrentVocation "druid"}}selected{{end}}>Druid</option>
                                                <option value="paladin" {{if eq .CurrentVocation "paladin"}}selected{{end}}>Paladin</option>
                                                <option value="knight" {{if eq .CurrentVocation "knight"}}selected{{end}}>Knight</option>
                                        </select>
                                </div>
                                <button type="submit" style="background: linear-gradient(180deg, #e6c98a 0%, #c9a86a 45%, #a8834f 100%); color: #1a1410; padding: 0.75rem 1.5rem; border: none; border-radius: 4px; cursor: pointer; font-weight: 600; font-family: 'Cinzel', serif; white-space: nowrap;">Submit</button>
                        </form>

                        <table>
                                <tr>
                                        <th style="width: 60px;">#</th>
                                        <th>Name</th>
                                        <th>Vocation</th>
                                        <th>{{.CurrentSkillDisplay}}</th>
                                </tr>
                                {{if .Highscores}}
                                        {{range $index, $hs := .Highscores}}
                                        <tr>
                                                <td style="text-align: center;">{{add $index 1}}</td>
                                                <td><a href="/character?name={{$hs.CharacterName}}">{{$hs.CharacterName}}</a></td>
                                                <td>{{or $hs.Profession "None"}}</td>
                                                <td>{{$hs.SkillValue}}</td>
                                        </tr>
                                        {{end}}
                                {{else}}
                                        <tr>
                                                <td colspan="4" style="text-align: center;">No highscores available.</td>
                                        </tr>
                                {{end}}
                        </table>
                </div>
        </div>
{{template "_footer.tmpl" .}}
